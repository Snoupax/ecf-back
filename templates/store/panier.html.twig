{% extends 'base.html.twig' %}

{% block title %}Accueil |
	{{parent()}}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="mt-3 mb-3">
			<h1 class="text-center">Votre panier</h1>
		</div>

		<table class="table">
			<thead>
				<tr>
					<th>Image</th>
					<th>Produit</th>
					<th>Quantité</th>
					<th>Prix</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% for element in dataPanier %}
					<tr>
						<td class="col-3"><img class="img-thumbnail" src="{{element.produit.image}}" alt=""></td>
						<td>
							<a href="{{path('produit',{id:element.produit.id, slug:element.produit.nom|replace({' ':'-'})})}}">{{element.produit.nom}}</a>
						</td>
						<td>{{ element.quantite }}</td>
						<td class="text-end">{{ element.produit.tarif }}€</td>
						<td class="text-end">{{ element.quantite * element.produit.tarif }}€</td>

					</tr>
				{% else %}
					<tr>
						<td colspan="5" class="text-center">Votre panier est vide</td>
					</tr>
				{% endfor %}
				<tr>
					<td colspan="3">Total</td>
					<td class="text-end">{{ total }}
						€</td>

				</tr>
			</tbody>

		</table>
		<form method='post' action="">
			<class="col">
				<input type="submit" value="Commander" name="commander" class="btn btn-success">
			</div>
		</form>
	</div>
</div>{% endblock %}
